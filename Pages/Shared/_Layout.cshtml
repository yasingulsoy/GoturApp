<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoturApp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Blinker:wght@400;700&display=swap" rel="stylesheet" />
    <link href="~/css/Index.css" rel="stylesheet" />
    <script src="js/Index.js"></script>
    <style>
        /* Üst container için metin rengini beyaz yap */
        .nav-links a {
            color: white; /* Metin rengini beyaz yap */
            text-decoration: none; /* Alt çizgiyi kaldır */
        }

            .nav-links a:hover {
                text-decoration: underline; /* Üzerine gelindiğinde alt çizgi ekle */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <!-- Arka plan rengini koyu yap -->
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse nav-links">
                    <!-- collapse sınıfını ekledim -->
                    <a href="">Anasayfa</a>
                    <a href="products.cshtml">Ürünler</a>
                    <a href="shoplogin.html">Bayi Girişi</a>
                    <a href="login.html">Giriş Yap / Kayıt Ol</a>
                    <a href="sss.html">SSS</a>
                    <a href="help.html">Yardım</a>
                    <a href="#" id="cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GoturApp Tüm Hakları Saklıdır - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>