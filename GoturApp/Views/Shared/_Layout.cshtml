<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GÖTÜR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoturApp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Blinker:wght@400;700&display=swap" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Blinker', sans-serif;
            background-color: #000; /* Arka plan siyah */
            color: white;
            overflow-x: hidden;
        }

        /* Navbar */
        .navbar {
            background-color: black !important;
            padding: 15px 20px;
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: white !important;
        }

        .navbar-nav {
            margin: 0 auto; /* Navigasyonu ortala */
        }

        .nav-item .nav-link {
            color: white !important;
            font-size: 18px;
            margin: 0 10px;
            transition: color 0.3s ease-in-out;
        }

            .nav-item .nav-link:hover {
                color: #f8f9fa !important;
            }

       
        .logo {
            width: 40px; /* Logonun genişliği */
            height: 40px; /* Logonun yüksekliği */
            background-image: url('wwwroot\img\götür logo.png'); /* Logo dosya yolu */
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
        }

        /* Footer */
        footer {
            background-color: black;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Logo Alanı -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="/img/götür logo.png" alt="Götür Logo" class="me-2" style="height: 40px;">
                    GÖTÜR
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Products">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="DealerLogin">Bayi Girişi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Help" asp-action="FAQ">SSS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Help" asp-action="Index">Yardım</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - GoturApp - Yasin Gülsoy | <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
